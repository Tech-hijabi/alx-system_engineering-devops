#!/usr/bin/env bash
# This script loops from 1 to 10 and displays "bad luck", "good luck" and "Best School" on the 4th, 8th and other iterations respectively

count=1

while [ $count -le 10 ]
do
  if [ $count -eq 4 ]
  then
    echo "bad luck"
  elif [ $count -eq 8 ]
  then
    echo "good luck"
  else
    echo "Best School"
  fi
  ((count++))
done
